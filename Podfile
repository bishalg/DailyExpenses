platform :ios, '12.0'

target 'Daily-Expenses' do
  use_frameworks!
  #use_modular_headers!
  
  # Pods for DailyExpenses
  
  # Firebase
  pod 'Fabric'
  pod 'Crashlytics'
  pod 'Firebase'
  pod 'Firebase/Core'
  pod 'Firebase/Auth'
  pod 'Firebase/Analytics'
  pod 'Firebase/Performance'
  pod 'Firebase/Firestore'

  # Animation
  pod 'Hero'
  
  # Pods for Google SignIn
  pod 'GoogleSignIn'
  # Pods for Facebook - Signin
  pod 'FBSDKCoreKit'
  pod 'FBSDKLoginKit'
  pod 'FacebookCore'
  pod 'FacebookLogin'
  pod 'FacebookShare'
  
  # Twitter Login
  pod 'Swifter'
  
  # Networking - JSON Parsing
  pod 'SwiftyJSON'
  pod 'Alamofire'
  pod 'Kingfisher'

  # Graph, Charts & Animation
  pod 'lottie-ios'
  pod 'Charts'
  pod 'JTAppleCalendar'
  # Loading - View
  pod 'SVProgressHUD'

  # Payment
  # pod 'Plaid', '~> 1.1.14'

  # Network Debug
  pod 'Wormholy', :configurations => ['Debug']

  # Calendar
  pod 'FSCalendar'
  
  target 'Daily-ExpensesTests' do
    inherit! :search_paths
    # Pods for testing
    pod 'Quick'
    pod 'Nimble'
  end

  target 'Daily-ExpensesUITests' do
    # Pods for testing
  end

end
